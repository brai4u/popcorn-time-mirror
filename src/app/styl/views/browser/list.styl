
.list-region
    height 100vh
    position: absolute
    left: 100px;
    right: 0px
    overflow-y: auto
    &::-webkit-scrollbar
        width 2px
    &::-webkit-scrollbar-track
        box-shadow inset 0 0 6px rgba(0, 0, 0, 0.1)
    &::-webkit-scrollbar-thumb
        background rgba(255, 255, 255, 0.22)

    .top-tools
        position absolute
        display block
        width 100%
        z-index 1
        top: 10vh
        padding-left: 48px
        
    #list-content
        margin-top: 30vh
        
    .title
        font-size 2.5em
        color #fff

    .filters-wrapper
        position relative
        margin-top 130px
        min-height 50px

    pt-dropdown
        padding-bottom 20px
        
    .list-backdrop
        position absolute
        width 100%
        top 0
        opacity: 0
        height 60vh
        background-position-x center
        background-attachment fixed
        -webkit-filter: brightness(55%)
        transition: opacity .6s ease-in;
        &.fadein
            opacity: 1
            
    #list-content
        position relative
        width 100%
        -webkit-user-select none
        text-align center
        .item
            position relative
            display inline-block
            overflow hidden
            transform translateY(50%) translateZ(0)
            opacity 1
            margin 2px 5px
            cursor pointer
            width 150px
            box-shadow 0 0 10px rgba(0, 0, 0, 0.5)
            img
                width 100%
                height 225px
                opacity: 0
                transition: opacity 300ms ease-in;
                &.fadein
                    opacity: 1
            .info
                position absolute
                bottom 0
                left 0
                right 0
                height auto
                background rgba(0, 0, 0, 0.7)
                color #fff
                padding 16px
                z-index 1
                transition transform 0.5s cubic-bezier(0.165, 0.84, 0.44, 1)
                transform translateY(100%)
                text-align left
                h3
                    font-size 14pt
                    line-height 15pt
                    font-weight normal
                small
                    font-size 12pt
                paper-fab
                    position absolute
                    width 45px
                    height 45px
                    right 24px
                    top -24px
                    background main-color-accent
                    transition transform 0.5s cubic-bezier(0.165, 0.84, 0.44, 1) 0.1s, background 0.4s
                    transform translateY(50px)
                    &::shadow core-icon
                        fill white
                    &:hover
                        background lighten(main-color-accent, 5)
            &:hover
                .info
                    transform translateY(0)
                    paper-fab
                        transform translateY(0)


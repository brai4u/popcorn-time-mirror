.list-backdrop
  height: 60vh;
  width: 100%;
  background-size: cover;
  position: absolute;
  opacity: 0
  -webkit-filter: brightness(90%)
  &.fadein
    transition: opacity .6s ease-in;
    opacity: 1

.list
  font-family 'Roboto', sans-serif
  position absolute
  height: calc(100% - 180px)
  padding-bottom: 10px
  overflow: scroll
  width: calc(100% - 200px);
  left: 100px;
  top 200px
  &::-webkit-scrollbar
    width 2px
  &::-webkit-scrollbar-track
    box-shadow inset 0 0 6px rgba(0, 0, 0, 0.1)
  &::-webkit-scrollbar-thumb
    background rgba(255, 255, 255, 0.22)
  .item
    position relative
    display inline-block
    overflow hidden
    margin 2px 5px
    cursor pointer
    width 150px
    img
      height: 224px
      opacity: 0
      &.fadein
        transition: opacity .3s ease-in;
        opacity: 1
    .info
      position absolute
      bottom 0
      left 0
      right 0
      height auto
      background rgba(0, 0, 0, 0.7)
      color #cecece
      z-index 1
      padding-bottom 10px
      padding-top 10px
      padding-left 10px
      transition transform 0.5s cubic-bezier(0.165, 0.84, 0.44, 1)
      transform translateY(100%)
      text-align left
      h3
        font-size 19px
        line-height 25px
        font-weight 500
      small
        font-size 14px
        line-height 11px
        font-weight 500
    &:hover
      .info
        transform translateY(0%)


.list
  font-family 'Roboto', sans-serif
  position absolute
  height 100%
  width 100%
  overflow: scroll
  top 80px
  .item
    position relative
    display inline-block
    overflow hidden
    margin 2px 5px
    cursor pointer
    width 150px
    box-shadow 0 0 10px rgba(0, 0, 0, 0.5)
    .info
      position absolute
      bottom 0
      left 0
      right 0
      height auto
      background rgba(0, 0, 0, 0.7)
      color #cecece
      z-index 1
      padding-bottom 10px
      padding-top 10px
      padding-left 10px
      transition transform 0.5s cubic-bezier(0.165, 0.84, 0.44, 1)
      transform translateY(100%)
      text-align left
      h3
        font-size 19px
        line-height 25px
        font-weight 500
      small
        font-size 14px
        line-height 11px
        font-weight 500
    &:hover
      .info
        transform translateY(0%)


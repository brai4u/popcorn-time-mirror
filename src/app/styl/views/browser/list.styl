.list-region
  height 100vh
  core-scroll-header-panel
    background-color #17181b
    position absolute
    top 0
    right 0
    bottom 0
    left 0
    &::shadow
      #condensedHeaderBg
        background-color rgba(17, 18, 20, 0.95)
  .tall
    height 39vh
  core-toolbar
    color #f1f1f1
    fill #f1f1f1
    background-color transparent
  pt-dropdown
    padding-bottom 20px
  .list-backdrop
    position absolute
    width 100%
    top 0
    opacity: 0
    height 60vh
    background-position-x center
    -webkit-filter: brightness(90%)
    &.fadein
      transition: opacity .6s ease-in;
      opacity: 1
  .content
    left 48px
    position absolute
    right 48px
    .item
      position relative
      display inline-block
      overflow hidden
      margin 2px 5px
      cursor pointer
      width 180px
      box-shadow 0 0 10px rgba(0, 0, 0, 0.5)
      img
        height 270px
      .info
        position absolute
        bottom 0
        left 0
        right 0
        height auto
        background rgba(0, 0, 0, 0.7)
        color #cecece
        z-index 1
        padding-bottom 10px
        padding-top 10px
        padding-left 10px
        transition transform 0.5s cubic-bezier(0.165, 0.84, 0.44, 1)
        transform translateY(100%)
        text-align left
        h3
          font-size 19px
          line-height 25px
          font-weight 500
        small
          font-size 14px
          line-height 11px
          font-weight 500
      &:hover
        .info
          transform translateY(0%)


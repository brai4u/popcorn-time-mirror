main-background-color = rgb(17, 18, 20, 1)
main-background-color-light = rgb(28, 29, 33, 1)
main-text-color = rgb(255, 255, 255, 1)
main-text-color-secondary = rgba(255, 255, 255, 0.6)
main-text-color-inactive = rgba(255, 255, 255, 0.3)
main-color-accent = rgb(63, 81, 181, 1)
disabled-text-color = rgb(122, 122, 122, 1)

.filter-bar
    position absolute
    top 120px
    left 0
    width: 100%
    -webkit-user-select: none
    position: absolute
    
    .filters
        position relative
        font-weight 700
        font-size 1.1em
        z-index 1001
        padding 0
        transition background-color 0.5s ease-out
        .filter
            display inline-block
            margin 0 40px
            .filter-element
                z-index 3
                color #fff
                border none
                font-size 1em
                pt-selectable-element
                    font-weight normal
                pt-selectable-element.selected
                    font-weight bold
                &#filter-order pt-selectable-element:hover
                    background main-color-accent
                &::shadow #options
                    background main-background-color
                &::shadow #arrow
                    opacity 0.7
        &.fixed
                position fixed
                top 0
                left 100px
                right 0
                margin-top 0
                background-color rgba(0, 0, 0, 0.8)
    
    .search
        position relative
        form
            &:before
                content: '\f002'
                font-family: FontAwesome
                font-style: normal
                transition color 0.5s
                color: $FilterBarIcon
                position: absolute
                top:11px
                left: 7px
                z-index: 2
                font-size: 1.4em

            &.edited .clear
                display: block
                font-weight: bold
                transition color 0.5s
                color: $FilterBarIcon
                position: absolute
                top:8px
                right: 5px
                padding: 3px 5px
                font-size: 1.2em

            &.edited input, input:focus
                width: 130px
                background-color: $SearchBoxBg
                color: $FilterBarText

            &.edited, &:hover
                cursor: pointer
                &:before
                    color: $FilterBarIconHover

            input
                line-height normal
                -webkit-app-region no-drag
                outline none
                cursor text
                width 0px
                height 18px
                position relative
                background $FilterBarBg no-repeat right center
                background-position right 3px center
                border solid 0px
                margin 8px 3px 0
                padding 1px 2px 3px
                padding-left 25px
                border-radius 10em
                -webkit-appearance textfield
                -webkit-box-sizing content-box
                transition width 0.5s

                &:focus
                    cursor: auto
                    &:before
                        color: $FilterBarIconHover //this doesn't work for some reason

                &::-moz-placeholder,
                &::-webkit-input-placeholder
                    color: transparent

                &:focus::-webkit-input-placeholder
                    color: rgba($FilterBarText,.7)
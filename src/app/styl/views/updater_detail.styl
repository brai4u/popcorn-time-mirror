.updater-detail-container
    height 100%
    width 100%
    position fixed
    background-color $BgColor1
    -webkit-user-select none
    opacity 1

    .close-icon
        top: 80px
    h1
        padding-top: 110px
        width: 100vw;
        text-align: center;
        font-size 20px
        color: $Text1
        font-family $Font
    h2
        padding-top: 50px
        padding-left: 60px;
        width: 100vw;
        text-align: left;
        text-decoration: underline;
        font-size 17px
        color: $Text1
        font-family $Font
    ul
        margin-top: 10px
        margin-left: 60px;
        margin-right: 60px;
        text-align: left;
        font-size 15px
        color: $Text1
        max-height: 40vh;
        font-family $Font
    li
        margin-left: 30px;
        top: 10px;
        height: 18px;
        font-size: 15px;
        line-height: 16px;
        list-style-type: circle;
        position: relative;

    p
        padding-top: 10px
        padding-left: 60px;
        width: 100vw;
        text-align: left;
        font-size 14px
        color: $Text1
        font-family $Font
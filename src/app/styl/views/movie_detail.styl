.movie-detail
    font-family 'Roboto', sans-serif
    position absolute
    height 100vh
    width 100vw
    background-color #17181b
    z-index 1
    overflow: hidden

    .bg-backdrop
        position fixed
        height 100vh
        width 100vw
        opacity 0
        background-position center
        background-size cover
        background-repeat no-repeat
        &.fadein
            transition: opacity .3s ease-in;
            opacity: 1

    .summary-wrapper
        position relative
        width 100vw
        height 78vh
        .summary-overlay
            position absolute
            top 0
            right 0
            bottom 0
            left 0
            background-color rgba(0, 0, 0, .4)
        .watched-toggle
            margin-top 66px
            margin-right 22px
            width 22px
            font-size 24.5px
            color #fff
            float right
            cursor pointer
        .back
            float left
            margin-top 50px
            margin-left 34px
            color #FFF
            cursor pointer
            font-size 42px
        .title
            color #FFF
            margin-top 44px
            text-shadow 1px 0px 2px rgba(20, 19, 21, 1)
            margin-left 17px
            float left
            font-size 44px
            font-weight 400
        .bookmark-toggle
            margin-top 66px
            margin-right 66px
            color #fff
            float right
            font-size 25px
            cursor pointer
        .poster
            width 53vh
            top 14vh
            left 90px
            opacity 0
            z-index 3
            position absolute
            border-radius 2px
            box-shadow 0 1px 5px rgba(0, 0, 0, 0.39)
            &.fadein
                transition: opacity .3s ease-in;
                opacity: 1
        .meta
            position absolute
            z-index 1
            bottom 0px
            left calc(53vh + 130px)
            right 55px
            padding-bottom 10px
            height 63.9vh
            overflow-y auto
            overflow-x hidden
            &::-webkit-scrollbar
                width 5px
            &::-webkit-scrollbar-track
                box-shadow inset 0 0 6px rgba(0, 0, 0, 0.3)
                border-radius 10px
            &::-webkit-scrollbar-thumb
                border-radius 10px
                background rgba(255, 255, 255, 0.58)
                box-shadow inset 0 0 6px rgba(0, 0, 0, 0.5)
            .meta-item
                float left
                color #ffffff
                i
                    font-size 17px
                    margin-left 1px
                    margin-right 1px
                p
                    font-size 15px
                    margin-top 2px
            .meta-synop
                text-align justify
                text-justify inter-word
                padding-right 5px
                margin-top 44px
                position relative
                color #ffffff
                width 100%
                line-height 25px
                font-size 15px
            .meta-dot
                float left
                position relative
                background-color #ffffff
                margin-top 6px
                margin-left 16px
                margin-right 16px
                width 7px
                height 7px
                border-radius 50%
            .meta-btn
                color #ffffff
                text-align center
                letter-spacing .2px
                text-transform uppercase
                float left
                font-weight 500
                margin-left 5px
                transition border-color, color 100ms linear
                padding-bottom 3px
                margin-right 30px
                margin-top 25px
                cursor pointer
                border-bottom 1px solid transparent
                &:hover
                    border-color rgba(255, 255, 255, 0.7)
                    color rgba(255, 255, 255, 0.7)
            .meta-divider
                width 100%
                position relative
                margin-top 70px
                margin-bottom 33px
                background-color rgba(101, 101, 101, 0.55)
                height 3px
            .people
                position relative
                width 100%
                height 17px
                margin-bottom 5px
                p
                    color #ffffff
                    font-size 15px
                    float left
                .person
                    padding-bottom 3px
                    cursor pointer
                    border-bottom 1px solid transparent
                    transition border-color, color 100ms linear
                    &:hover
                        border-color rgba(255, 255, 255, 0.7)
                        color rgba(255, 255, 255, 0.7)
                .status
                    color rgba(255, 255, 255, 0.45) !important
                    font-size 15px
                    float left
                    margin-left 8px

    .controls-container
        bottom 0px
        background-color #111214
        position absolute
        height 22vh
        right 0
        width 100vw
        .watchnow-btn
            cursor pointer
            padding-left 17px
            padding-right 17px
            color #fff
            font-weight 500
            font-size 15px
            text-align center
            text-transform uppercase
            border-radius 4px
            float right
            position absolute
            top 10vh
            right 60px
            transition 0.5s
            background-color #3F51B5
            &:hover
                background-color #3a499b
            &:active
                background-color #2d41b1
                transition 0.2s
            i
                margin-right 9px
                float left
                line-height 25px
        .meta-container-c
            top 3vh
            position absolute
            left calc(53vh + 130px)
            li
                width 100%
                list-style none
                margin-bottom 2vh
                max-height 24px
                height 2.5vh
                ul
                    &.dropdown
                        display none
                        position absolute
                        left -15px
                        padding-top 5px
                        background-color #1C1D21
                        width 250px
                        border-radius 1px
                        z-index 5
                        bottom 0px
                        box-shadow 0 3px 18px rgba(0, 0, 0, 0.24), inset 0 1px 0 rgba(255, 255, 255, 0.1)
                        i
                            float left
                        li
                            list-style none
                            margin 0
                            height 32px
                            margin-bottom 3px
                            &:hover
                                background-color #3F51B5
                            p
                                padding-right 60px
                                line-height 31px
                            i
                                line-height 32px
                                margin-left 15px
                        &.visable
                            display block
                &.quality-toggle
                    pt-toggle::shadow #icon
                        color: white
                    p
                        opacity 0.5
                        &.active
                            opacity 1
                &.subtitles-dropdown
                    padding-left: 1em
                    color: white

                    pt-dropdown
                        width: 100%
                        z-index: 5
                    pt-dropdown::shadow #label
                        pt-selectable-element 
                            display: inline-block
                        #icon
                            margin-right: 9px;
                    
                    pt-dropdown::shadow #options 
                        right: 0
                    
                    pt-selectable-element.selected 
                        font-weight: bold
                    
                    pt-selectable-element:hover 
                        background: #3F51B5
                            
                &.device-dropdown
                    color: white
                    pt-dropdown
                        z-index: 5
                    pt-selectable-element.selected 
                        font-weight: bold

                    pt-selectable-element:hover 
                        background: #3F51B5
            p
                font-size 14px
                text-shadow 1px 0px 2px rgba(20, 19, 21, 1)
                cursor pointer
                color #ffffff
                float left
                position relative
                margin-left 10px
                left 10px
                font-weight 500
                line-height 25px

.movie-detail .summary-wrapper .meta .people .status,
p
    color #ffffff
    font-size 15px
    float left


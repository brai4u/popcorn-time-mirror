md-tab-primary()
  > md-tabs-wrapper
    background-color: $primary-color
    > md-tabs-canvas
      > md-pagination-wrapper
        > md-tab-item:not([disabled])
          color: $primary-100
          &.md-active, &.md-focused
            color: $primary-contrast
          &.md-focused
            background: $primary-contrast-1
md-tab-warn()
  > md-tabs-wrapper
    background-color: $warn-color
    > md-tabs-canvas
      > md-pagination-wrapper
        > md-tab-item:not([disabled])
          color: $warn-100
          &.md-active, &.md-focused
            color: $warn-contrast
          &.md-focused
            background: $warn-contrast-1
md-tab-accent()
  > md-tabs-wrapper
    background-color: $accent-color
    > md-tabs-canvas
      > md-pagination-wrapper
        > md-tab-item:not([disabled])
          color: $accent-100
          &.md-active, &.md-focused
            color: $accent-contrast
          &.md-focused
            background: $accent-contrast-1
        > md-ink-bar
          color: $primary-600-1
          background: $primary-600-1
md-tabs.md-pct-theme
  md-tabs-wrapper
    background-color: transparent
    border-color: $foreground-4
  .md-paginator md-icon
    color: $primary-color
  md-ink-bar
    color: $accent-color
    background: $accent-color
  .md-tab
    color: $foreground-2
    &[disabled]
      color: $foreground-3
    &.md-active, &.md-focused
      color: $primary-color
    &.md-focused
      background: $primary-color-1
    .md-ripple-container
      color: $accent-100
  &.md-accent
    md-tab-accent()
  &.md-primary
    md-tab-primary()
  &.md-warn
    md-tab-warn()
md-toolbar > md-tabs.md-pct-theme
  md-tab-primary()
md-toolbar.md-accent > md-tabs.md-pct-theme
  md-tab-accent()
md-toolbar.md-warn > md-tabs.md-pct-theme
  md-tab-warn()
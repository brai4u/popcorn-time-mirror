md-progress-circular.md-pct-theme
  background-color: transparent
  .md-inner
    .md-gap
      border-top-color: $primary-100
      border-bottom-color: $primary-100
    .md-left, .md-right
      .md-half-circle
        border-top-color: $primary-100
    .md-right
      .md-half-circle
        border-right-color: $primary-100
    .md-left
      .md-half-circle
        border-left-color: $primary-100
  &.md-warn
    .md-inner
      .md-gap
        border-top-color: $warn-color
        border-bottom-color: $warn-color
      .md-left, .md-right
        .md-half-circle
          border-top-color: $warn-color
      .md-right
        .md-half-circle
          border-right-color: $warn-color
      .md-left
        .md-half-circle
          border-left-color: $warn-color
  &.md-accent
    .md-inner
      .md-gap
        border-top-color: $accent-color
        border-bottom-color: $accent-color
      .md-left, .md-right
        .md-half-circle
          border-top-color: $accent-color
      .md-right
        .md-half-circle
          border-right-color: $accent-color
      .md-left
        .md-half-circle
          border-left-color: $accent-color
  /* Poster plugin */
  /*****************/
  wc-poster 
    width: 100%
    height: 100%
    max-width: 100%
    max-height: 100%
    position: absolute
    display: block
    z-index: 1
    top: 0
    pointer-events: none
  
  wc-poster img 
    width: auto
    height: auto
    max-width: 100%
    max-height: 100%

    top: 0
    bottom: 0
    right: 0
    left: 0
    margin: auto
    position: absolute
  
  wc-poster img.pause,
  wc-poster img.play 
    display: none
  
  wc-poster img.stop 
    display: block
  
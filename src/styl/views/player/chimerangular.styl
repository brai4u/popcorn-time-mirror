pt-player-container
  height: 100vh 
  width: 100vw
  position: absolute
  z-index: 3

chimerangular, [chimerangular] 
  position: relative
  background-color: #000000
  display: block
  flex-direction: column
  overflow: hidden
  -webkit-touch-callout: none
  -webkit-user-select: none
  -khtml-user-select: none
  -moz-user-select: moz-none
  -ms-user-select: none
  user-select: none

  button 
    cursor: pointer
  
  &.fullscreen 
    position: fixed
    left: 0
    top: 0
  
  wc-media 
    width: 100vw
    height: 100vh
    max-width: 100vw
    max-height: 100vh
    display: block

    canvas 
      width: 100vw
      height: 100vh
      max-width: 100vw
      max-height: 100vh

      &::-webkit-media-text-track-container 
        bottom: 50px
            
  .iconButton 
    color: #FFFFFF
    speak: none
    font-style: normal
    font-weight: normal
    font-variant: normal
    text-transform: none
    line-height: 1
    -webkit-font-smoothing: antialiased

    background: none
    padding: 6px
    border: none
  
  .iconButton:focus 
    border: 1px solid white


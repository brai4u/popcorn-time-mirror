@font-face 
  font-family: 'chimerangular'
  src: url('fonts/chimerangular.eot')
  src: url('fonts/chimerangular.eot?#iefix') format('embedded-opentype'),
  url('fonts/chimerangular.woff') format('woff'),
  url('fonts/chimerangular.ttf') format('truetype'),
  url('fonts/chimerangular.svg#chimerangular') format('svg')
  font-weight: normal
  font-style: normal

chimerangular, [chimerangular] 
  width: 100%
  height: 100%
  position: relative
  background-color: #000000
  display: block
  flex-direction: column

  -webkit-touch-callout: none
  -webkit-user-select: none
  -khtml-user-select: none
  -moz-user-select: moz-none
  -ms-user-select: none
  user-select: none

  button 
    cursor: pointer
  
  &.fullscreen 
    position: fixed
    left: 0
    top: 0
  
  wc-media 
    width: 100%
    height: 100%
    max-width: 100%
    max-height: 100%
    display: block

    canvas 
      width: 100%
      height: 100%
      max-width: 100%
      max-height: 100%

      &::-webkit-media-text-track-container 
        bottom: 50px
            
  .iconButton 
    color: #FFFFFF
    font-family: 'chimerangular'
    speak: none
    font-style: normal
    font-weight: normal
    font-variant: normal
    text-transform: none
    line-height: 1
    -webkit-font-smoothing: antialiased

    background: none
    padding: 6px
    border: none
  
  .iconButton:focus 
    border: 1px solid white


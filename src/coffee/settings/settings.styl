pt-settings-container
  font-family 'Roboto', sans-serif
  position absolute
  height 100vh
  width 100vw
  background-color #17181b
  z-index 3
  overflow hidden
  overflow-y scroll

  section
    float left
    width 100vw

    .buttons 
      padding 20px
      
    h1
      text-transform uppercase
      color #cecece
      float left
      position relative
      width 260px
      text-align right
      font-size 20px

    .content
      height 100%
      min-height 200px
      position relative
      padding-bottom 20px
      width calc(100vw - 300px)
      border-left 1px
      border-color #494a4e
      border-style solid
      float right

      .content-row
        top 10px
        width 100%
        margin-bottom 10px
        padding-left 80px
        height 40px
        font-size 16px
        position relative
        color #cecece

        p
          height 20px
          float left
          font-size 17px

  .settings-dropdown
    top -30px
    position absolute
    left 500px

  md-input-container
    label
      position absolute
      top 0px
      width 100%
      margin-bottom 10px
      padding-left 80px
      font-size 16px
      color #cecece

    md-checkbox
      margin: 20px 0 26px 0
      left 590px

.settings-view .dropup, .dropdown
  position absolute
